[user]
	name = Pedro Kostelec
	email = pedrokost@gmail.com

[color]
	diff = auto
	status = auto
	branch = auto

[color "branch"]
	current = yellow reverse
	remote = green bold
	local = blue bold

[color "diff"]
	meta = blue bold
	frag = magenta bold
	old = red bold
	new = green bold

[push]
	default = current

[core]
	editor = subl -w
	excludesfile = ~/.gitignore

[alias]
	co = checkout
	ci = commit
	st = status
	br = branch
	df = diff
	dif = diff
	dfw = diff -w
	hist = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)%Creset' --abbrev-commit
	type = cat-file -t
	dump = cat-file -p
[credential]
	helper = cache
